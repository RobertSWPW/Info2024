@using System.Reflection
@using System.ComponentModel.DataAnnotations
@model Info2024.Models.Opinion
@{
	ViewData["Title"] = "Usuwanie opinii";
}

<h1 class="text-primary">Kasowanie opinii</h1>
<h3 class="text-success">Czy na pewno chcesz usunąć tę opinię?</h3>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Text.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Text.Title)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Author.FullName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Author.FullName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Comment)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Comment)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.AddedDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.AddedDate)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Rating)
		</dt>
		<dd class="col-sm-10">
			@(((Rating)Model.Rating).GetType().GetField(Model.Rating.ToString()).GetCustomAttribute<DisplayAttribute>().Name)
		</dd>

	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="OpinionId" />
		<input type="submit" value="Usuń" class="btn btn-danger" /> 
		<a asp-action="Index" class="btn btn-light">Powrót do opinii</a>
	</form>
</div>
