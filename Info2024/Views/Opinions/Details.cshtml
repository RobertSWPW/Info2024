@using System.Reflection
@using System.ComponentModel.DataAnnotations
@model Info2024.Models.Opinion

@{
	ViewData["Title"] = "Opinia";
}
<h1 class="text-primary">Szczegóły opinii</h1>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Text.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Text.Title)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Author.FullName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Author.FullName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Comment)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Comment)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.AddedDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.AddedDate)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Rating)
		</dt>
		<dd class="col-sm-10">
			@(((Rating)Model.Rating).GetType().GetField(Model.Rating.ToString()).GetCustomAttribute<DisplayAttribute>().Name)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.OpinionId" class="btn btn-warning">Edycja</a> 
	<a asp-action="Index" class="btn btn-light">Powrót do opinii</a>
</div>
